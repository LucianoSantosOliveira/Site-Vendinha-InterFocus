@model IEnumerable<Site_Vendinha_InterFocus.Models.Cliente>

@{
    ViewData["Title"] = "List";
}

<h1>Clientes Cadastrados</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Cadastrar novo cliente</a>
</p>
<table class="table" id="tableVenda">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClienteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotalDividas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotalDividas)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClienteId}) |
                @Html.ActionLink("Details", "Details", new {id = item.ClienteId }) |
                @Html.ActionLink("Delete", "Delete", new {id = item.ClienteId })|
                @Html.ActionLink("Lista de dívidas","List", "Divida", new {clienteId = item.ClienteId }, new {@class="btn btn-primary"}) |
                @Html.ActionLink("Criar nova divida","Create", "Divida", new {clienteId = item.ClienteId }, new {@class="btn btn-secondary"})
            </td>
        </tr>
}
    </tbody>
</table>
