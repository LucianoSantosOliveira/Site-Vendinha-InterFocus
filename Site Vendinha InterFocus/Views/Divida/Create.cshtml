@model Site_Vendinha_InterFocus.Models.Divida

@{
    ViewData["Title"] = "Create";
}

<h1>Criar nova dívida</h1>

<h4>Divida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" id="Valor" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstaPaga" /> @Html.DisplayNameFor(model => model.EstaPaga)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DataDeCriacao" class="control-label"></label>
                <input asp-for="DataDeCriacao" class="form-control" />
                <span asp-validation-for="DataDeCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDePagamento" class="control-label"></label>
                <input asp-for="DataDePagamento" class="form-control" />
                <span asp-validation-for="DataDePagamento" class="text-danger"></span>
            </div>

           <div class="form-group">
                <label class="control-label">Selecione o cliente</label>
                <br />
                @Html.DropDownList("ClienteId",new SelectList(ViewBag.Clientes, "Value", "Text"), new {@Id="ClientesSelect"})
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
