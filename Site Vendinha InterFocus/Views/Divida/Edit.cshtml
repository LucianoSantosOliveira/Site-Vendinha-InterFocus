@model Site_Vendinha_InterFocus.Models.Divida

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Divida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.DividaId)
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" id="Valor" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstaPaga" /> @Html.DisplayNameFor(model => model.EstaPaga)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DataDeCriacao" class="control-label"></label>
                <input asp-for="DataDeCriacao" class="form-control" />
                <span asp-validation-for="DataDeCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDePagamento" class="control-label"></label>
                <input asp-for="DataDePagamento" class="form-control" />
                <span asp-validation-for="DataDePagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <input asp-for="ClienteId" class="form-control" />
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Voltar para lista de dívidas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
